$ifenv nonexistantenv = anything
	; this code should never be included, force an assembly error
	junk junk junk
$endenv

$ifenv buildtype=dev
	; this code should always be included, check for this comment in the output source code
$endenv

$ifenv (includedebug!=no) ; Legacy syntax with parens
	; This should never be included
	junk junk junk
$endenv

$if(includedebug=no) ; Legacy syntax with IF and parens
	; Testing legacy syntax, this comment should appear in the output source code
$endenv


