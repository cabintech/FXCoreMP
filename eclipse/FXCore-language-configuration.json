{
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
  ],
    "autoClosingPairs": [
        { "open": "{", "close": "}", "notIn": ["string"] },
        { "open": "[", "close": "]", "notIn": ["string"] },
        { "open": "(", "close": ")", "notIn": ["string"] },
        { "open": "'", "close": "'", "notIn": ["string"] },
        { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
        { "open": "`", "close": "`", "notIn": ["string", "comment"] }
    ],  
  "folding": {
    "markers": {
      "start": "\\$macro",
      "end": "\\$endmacro"
    }
  }
}
